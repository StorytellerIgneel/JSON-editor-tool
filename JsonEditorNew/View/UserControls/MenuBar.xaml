<UserControl x:Class="JsonEditorNew.View.UserControls.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:JsonEditorNew.View.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="25" d:DesignWidth="800">
    <Grid Background="Red" HorizontalAlignment="Stretch" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Menu VerticalAlignment="Top" HorizontalAlignment="Stretch">
            <MenuItem Header="File" FontSize="20">
                <MenuItem Header="Open  (CTRL + O)" Click="OpenJson_Click"/>
                <MenuItem Header="Save (CTRL + S)" Click="SaveJson_Click"/>
                <MenuItem Header="Save As" Click="SaveAsJson_Click"/>
                <MenuItem Header="Exit App" Click="ExitApp_Click"/>
            </MenuItem>
            <MenuItem Header="Edit" FontSize="20"/>
        </Menu>
    </Grid>
</UserControl>
